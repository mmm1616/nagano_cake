<h2>Sign up</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer' do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>
  
  <div class="field">
  <%= f.label :last_name, "氏" %>
  <%= f.label :first_name, "名" %>
  <%= f.text_field :last_name, autofocus: true, required: true, class: 'form-control' %>
  <%= f.text_field :first_name, autofocus: true, required: true, class: 'form-control' %>
  </div>
  
  <div class="field">
  <%= f.label :last_name_kana, "フ リ" %>
  <%= f.label :first_name_kana, "ガ ナ" %>
  <%= f.text_field :last_name_kana, autofocus: true, required: true, class: 'form-control' %>
  <%= f.text_field :first_name_kana, autofocus: true, required: true, class: 'form-control' %>
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
  
  <div class="field">
  <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :postal_code, autofocus: true, required: true, class: 'form-control' %>
  </div>
  
  <div class="field">
  <%= f.label :address, "住所" %>
  <%= f.text_area :address, autofocus: true, required: true, class: 'form-control' %>
  </div>
  
  <div class="field">
  <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
  <%= f.text_field :telephone_number, autofocus: true, required: true, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード(6文字以上)" %>
    <% if @minimum_password_length %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
