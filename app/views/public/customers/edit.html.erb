<div class="container">
<div class="col-5 mt-5 mb-5 bg-primary text-center">
<h2>会員情報編集</h2>
</div>
</div>

<div class="container">
<div class="col-9">
    
<%= form_with model: @customer, url: public_customer_path(@customer.id), method: :patch do |f| %>

<div class="form-group row pb-2">
<div class="col-2 col-form-label">
<%= f.label :last_name, "氏" %>
<%= f.label :first_name, "名" %>
</div>
<div class="col-3">
<%= f.text_field :last_name, class:"form-control" %>
</div>
<div class="col-3">
<%= f.text_field :first_name, class:"form-control" %>
</div>
</div>

<div class="form-group row pb-2">
<div class="col-2 col-form-label">
<%= f.label :last_name_kana, "フリ" %>
<%= f.label :first_name_kana, "ガナ" %>
</div>
<div class="col-3">
<%= f.text_field :last_name_kana, class:"form-control" %>
</div>
<div class="col-3">
<%= f.text_field :first_name_kana, class:"form-control" %>
</div>
</div>

<div class="form-group row pb-2">
<div class="col-2 col-form-label">
<%= f.label :postal_code, "郵便番号" %>
</div>
<div class="col-3">
<%= f.text_field :postal_code, class:"form-control" %>
</div>
</div>

<div class="form-group row pb-2">
<div class="col-2 col-form-label">
<%= f.label :address, "住所" %>
</div>
<div class="col-9">
<%= f.text_area :address, class:"form-control" %>
</div>
</div>

<div class="form-group row pb-2">
<div class="col-2 col-form-label">
<%= f.label :telephone_number, "電話番号" %>
</div>
<div class="col-3">
<%= f.text_field :telephone_number, class:"form-control" %>
</div>
</div>

<div class="form-group row pb-2">
<div class="col-2 col-form-label">
<%= f.label :email, "メールアドレス" %>
</div>
<div class="col-3">
<%= f.text_field :email, class:"form-control" %>
</div>
</div>

<div class="form-froup row">
<div class="col-2 col-form-label"></div>
<div class="col-3">
<%= f.submit '編集内容を保存',class:"btn btn-success" %>
</div>
<% end %>
<%= link_to public_customer_unsubscribe_path(@customer.id) do %>
<div class="btn btn-danger">退会する</div>
</div>
<% end %>

</div>