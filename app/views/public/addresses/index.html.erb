<div class="container">
<div class="col-5 mt-5 mb-5 secondary text-center">
<h2>配送先登録/一覧</h2>
</div>
</div>

<%= form_with model: @address, url: public_addresses_path(@address.id), method: :post do |f| %>

<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
<%= f.text_field :postal_code, class:"form-control" %>

<%= f.label :address, "住所" %>
<%= f.text_area :address, class:"form-control" %>

<%= f.label :name, "宛名" %>
<%= f.text_field :name, class:"form-control" %>

<%= f.submit '新規登録',class:"btn btn-success" %>

<% end %>