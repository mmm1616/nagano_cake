<div class="container">
<div class="col-5 mt-5 mb-5 secondary text-center">
<h2>配送先編集</h2>
</div>
</div>

<div class="container">
<div class="col-11">
    
<%= form_with model: @address, url: public_address_path(@address.id), method: :patch do |f| %>

<div class="form-group row pb-2">
<div class="col-3 col-form-label">
<%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
</div>
<div class="col-4">
<%= f.text_field :postal_code, class:"form-control" %>
</div>
</div>

<div class="form-group row pb-2">
<div class="col-3 col-form-label">
<%= f.label :address, "住所" %>
</div>
<div class="col-8">
<%= f.text_area :address, class:"form-control" %>
</div>
</div>

<div class="form-group row">
<div class="col-3 col-form-label">
<%= f.label :name, "宛名" %>
</div>
<div class="col-4">
<%= f.text_field :name, class:"form-control" %>
</div>
</div>

<div class="col-9 text-right">
<%= f.submit '変更内容を保存',class:"btn btn-success" %>
</div>

<% end %>
</div>
</div>