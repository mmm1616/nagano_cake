<div class="container">
<div class="col-4 mt-5 mb-5 secondary text-center">
<h2>注文情報確認</h2>
</div>
</div>

<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>

<div class="container">
<table class="table col-10 mx-auto mt-5 table-bordered">
    <thead class="thead-light">
        <tr><th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr><td><%= image_tag cart_item.item.image, size: "60x50" %><span class="pl-4"><%= cart_item.item.name %></span></td>
            <td class="align-middle" style="width:15%"><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td class="align-middle" style="width:15%"><%= cart_item.amount %></td>
            <td><%= (cart_item.item.add_tax_price*cart_item.amount).to_s(:delimited) %></td>
        <% end %>
            </td>
        </tr>
    </tbody>
</table>

<table>
    <tr>
        <td>送料</td>
        <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
        <td>商品合計</td>
        <td><%= @total.round.to_s(:delimited) %></td>
    </tr>
    <tr>請求金額</tr>
    <tr><%= (@order.shipping_cost + @total.round).to_s(:delimited) %> </tr>
</table>

<h4>支払方法</h4>
<%= @order.payment_method %>

<h4>お届け先</h4>

<%= @order.postal_code %><%= @order.address %><br>
<%= @order.name %>

<%= f.submit '注文を確定する',class:"btn btn-success" %>

<% end %>