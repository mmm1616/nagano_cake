<div class="container">
<div class="col-4 mt-5 mb-5 secondary text-center">
<h2>注文情報入力</h2>
</div>
</div>

<div class="container">
<%= form_with model: @order, url: public_orders_path, method: :post do |f| %>

<h4>支払方法</h4>
<div class="ml-3">
<%= f.radio_button :payment_method, 0 %>
<%= f.label :payment_method, "クレジットカード" %>

<%= f.radio_button :payment_method, 1 %>
<%= f.label :payment_method, "銀行振込" %>
</div>

<h4 class="mt-3">お届け先</h4>
<div class="ml-3">
<%= f.radio_button :address, 0 %>
<%= f.label :address, "ご自身の住所" %>
<div class="ml-5">
<p><%= @customer.postal_code %><%= @customer.address %><br>
   <%= @customer.full_name %>
</p>
</div>
</div>

<div class="ml-3">
<%= f.radio_button :address, 1 %>
<%= f.label :address, "登録済住所から選択" %>
<div class="ml-5">
<%= f.collection_select :address_id, Address.all, :id, :full_address %>
</div>
</div>

<div class="mt-3 ml-3">
<%= f.radio_button :address, 2 %>
<%= f.label :address, "新しいお届け先" %>
<div class="col-10 ml-5">
<div class="form-group row">
<%= f.label :postal_code, "郵便番号(ハイフンなし)", class:"col-3 col-form-label" %>
<%= f.text_field :postal_code, class:"form-control", style:"width:20%" %>
</div>

<div class="form-group row">
<%= f.label :address, "住所", class:"col-3 col-form-label" %>
<%= f.text_area :address, class:"form-control", style:"width:50%" %>
</div>

<div class="form-group row">
<%= f.label :name, "宛名", class:"col-3 col-form-label" %>
<%= f.text_field :name, class:"form-control", style:"width:20%" %>
</div>
</div>

<div class="col-12 text-center mt-3">
<%= f.submit '確認画面へ進む',class:"btn btn-primary" %>
</div>

<% end %>
</div>

</div>