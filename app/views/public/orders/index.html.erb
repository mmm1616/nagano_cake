<div class="container">
<div class="col-4 mt-5 mb-5 secondary text-center">
<h2>注文履歴一覧</h2>
</div>
</div>

<div class="container">
<table class="table table-bordered col-12">
    <thead class="thead-secondary">
        <tr>
            <th style="width:10%">注文日</th>
            <th style="width:40%">配送先</th>
            <th style="width:20%">注文商品</th>
            <th style="width:10%">支払金額</th>
            <th style="width:10%">ステータス</th>
            <th style="width:10%">注文詳細</th>
        </tr>
    </thead>
    <tbody>
         <% @orders.each do |order| %>
        <tr>
            <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td class="align-middle"><%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
            <td class="align-middle"><% order.order_details.each do |order_detail| %>
                <div class="d-flex flex-column"><%= order_detail.item.name %></div>
                <% end %></td>
            <td class="align-middle"><%= (order.shipping_cost + order.total_payment ).to_s(:delimited) %>円</td>
            <td class="align-middle"><%= order.status_i18n %></td>
            <td class="align-middle"><%= link_to "表示する", order_path(order.id), class: "btn btn-primary btn-sm" %></td>
        </tr>
        <% end %>
    </tbody>
    
</table>
</div>