<div class="container">
<div class="col-3 mt-5 mb-5 secondary text-center">
<h2>注文履歴一覧</h2>
</div>
</div>

<div class="container">
<table class="table col-10 mx-auto">
    <thead class="thead-light">
        <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
        </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
        <tr>
            <td><%= link_to "#{order.created_at}", admin_order_path(order.id) %></td>
            <td><%= customer.full_name %></td>
            <td><%= order.amount %></td>
            <td><%= order.status %></td>
        </tr>
    </tbody>
    <% end %>
</table>
</div>