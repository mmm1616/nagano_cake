<div class="container">
<div class="col-3 mt-5 mb-5 secondary text-center">
<h2>注文履歴一覧</h2>
</div>
</div>

<div class="container">
<table class="table col-10 mx-auto">
    <thead class="thead-light">
        <tr>
            <th style="width:25%">購入日時</th>
            <th style="width:25%">購入者</th>
            <th style="width:25%">注文個数</th>
            <th style="width:25%">注文ステータス</th>
        </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
            <td><%= link_to "#{order.created_at.strftime('%Y/%m/%d %H:%M:%S')}", admin_order_path(order.id) %></td>
            <td><%= order.customer.last_name %><%= order.customer.first_name%></td>
            <td><% order.order_details.each do |order_detail| %>
                <%= order_detail.amount %>
                <% end %></td>
            <td><%= order.status %></td>
        </tr>
    </tbody>
    <% end %>
</table>
</div>