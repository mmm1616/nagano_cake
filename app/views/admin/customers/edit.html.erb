<div class="container">
<div class="col-10 mt-5">
<h2>#{@customer.name}さんの会員詳細</h2>
</div>
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>

<div class="form-group">
<label for ="customer_id">会員ID</label>
<%= @customer.id %>
</div>

<div class="form-group">
<label for ="customer_name">氏名</label>
<%= f.text_field :last_name, class:"form-control" %><%= f.text_field :first_name, class:"form-control" %>
</div>

<div class="form-group">
<label for ="customer_name_kana">フリガナ</label>
<%= f.text_field :last_name_kana, class:"form-control" %><%= f.text_field :first_name_kana, class:"form-control" %>
</div>

<div class="form-group">
<label for ="customer_postal_code">郵便番号</label>
<%= f.text_area :postal_code, class:"form-control" %>
</div>

<div class="form-group">
<label for ="customer_name_kana">住所</label>
<%= f.text_field :address, class:"form-control" %>
</div>

<div class="form-group">
<label for ="customer_name_kana">電話番号</label>
<%= f.text_field :telephone_number, class:"form-control" %>
</div>

<div class="form-group">
<label for ="is_active">会員ステータス</label>
<%= f.radio_button :is_active, '1' %>
<%= f.label :is_active, '有効', value: 1%>
<%= f.radio_button :is_active, '0' %>
<%= f.label :is_active, '退会', value: 0 %>
</div>

<div class="form-group">
<%= f.submit '変更を保存',class:"btn btn-success" %>
</div>


<% end %>