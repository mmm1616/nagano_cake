<div class="container">
<div class="col-2 mt-5 mb-5 secondary text-center">
<h2>会員一覧</h2>
</div>
</div>


   <div class="container">
        <table class="table col-10 mx-auto">
            <thead class="thead-light">
                <tr>
                 <th>会員ID</th>
                 <th>氏名</th>
                 <th>メールアドレス</th>
                 <th>ステータス</th>
                </tr>
            </thead>
        
            <tbody>
                <% @customers.each do |customer| %>
                <tr>
                  <td><%= customer.id %></td>
                  <td><%= link_to "#{customer.full_name}", admin_customer_path(customer.id) %></td>
                  <td><%= customer.email %></td>
                  <% if customer.is_active %>
                  <td><span class="text-success">有効</span></td>
                  <% else %>
                  <td><span class="text-muted">退会</span></td>
                  <% end %>
                </tr>
                <% end %>
            </tbody>
        </table>
        
    </div>
    
    <div class="container text-align-center">
    <%= paginate @customers %>
    </div>
    