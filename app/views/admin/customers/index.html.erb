<div class="container">
<div class="row">
<div class="col-6 mt-5">
<h2>会員一覧</h2>
</div>
</div>
</div>

   <div class="container">
        <table class="table col-10 mx-auto">
            <thead>
                <tr>
                 <th>会員ID</th>
                 <th>氏名</th>
                 <th>メールアドレス</th>
                 <th>ステータス</th>
                </tr>
            </thead>
        <% @customers.each do |customer| %>
            <tbody>
                <tr>
                  <td><%= customer.id %></td>
                  <td><%= link_to "#{customer.full_name}", admin_customer_path(customer.id) %></td>
                  <td><%= customer.email %></td>
                  <% if customer.is_active %>
                  <td>有効</td>
                  <% else %>
                  <td>退会</td>
                  <% end %>
                </tr>
            </tbody>
            <% end %>
        </table>
    </div>