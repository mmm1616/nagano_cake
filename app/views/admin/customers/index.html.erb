
        <table class="table">
            <thead>
                <tr>
                 <th>会員ID</th>
                 <th>氏名</th>
                 <th>メールアドレス</th>
                 <th>ステータス</th>
                </tr>
            </thead>
        <% @customers.each do |customer| %>
            <tbody>
                <tr>
                  <td><%= customer.id %></td>
                  <td><%= link_to "#{customer.name}", admin_customer_path(customer.id) %></td>
