<div class="container">
<div class="col-10 mt-5 pb-4">
<h2><%= @customer.full_name %>さんの会員詳細</h2>
</div>
</div>


<div class="container">
<div class="col-7 mx-auto">
    
<div class="field row pb-2">
<label for ="customer_id" class="col-3">会員ID</label>
<div class="col-9">
<%= @customer.id %>
</div>
</div>

<div class="field row pb-2">
<label for ="customer_name" class="col-3">氏名</label>
<div class="col-9">
<%= @customer.last_name %> <%= @customer.first_name %>
</div>
</div>

<div class="field row pb-2">
<label for ="customer_name_kana" class="col-3">フリガナ</label>
<div class="col-9">
<%= @customer.last_name_kana %> <%= @customer.first_name_kana %>
</div>
</div>

<div class="field row pb-2">
<label for ="customer_postal_code" class="col-3">郵便番号</label>
<div class="col-9">
<%= @customer.postal_code %>
</div>
</div>

<div class="field row pb-2">
<label for ="customer_address" class="col-3">住所</label>
<div class="col-9">
<%= @customer.address %>
</div>
</div>

<div class="field row pb-2">
<label for ="customer_telephone_number" class="col-3">電話番号</label>
<div class="col-9">
<%= @customer.telephone_number %>
</div>
</div>

<div class="field row pb-2">
<label for ="customer_email" class="col-3">メールアドレス</label>
<div class="col-9">
<%= @customer.email %>
</div>
</div>

<div class="field row pb-2">
<label for ="customer_status" class="col-3">会員ステータス</label>
<div class="col-9">
<% if @customer.is_active %>
<p>有効</p>
<% else %>
<p>退会</p>
<% end %>
</div>
</div>

<%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-success mr-3" %>
<%= link_to "注文履歴一覧を見る", admin_path, class:"btn btn-primary" %>

</div>
