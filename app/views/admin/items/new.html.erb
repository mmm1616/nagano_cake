<div class="container">
 <div class="row">
 <div class="w-50 mx-auto">

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<div class="form-group">
<label for ="item_image">商品画像</label>
<%= f.file_field :image, class:"form-control-file", accept: "image/*" %>
</div>
</form>

<div class="form-group">
<label for ="item_name">商品名</label>
<%= f.text_field :name, class:"form-control" %>
</div>

<div class="form-group">
<label>商品説明</label>
<%= f.text_area :introduction,class:"form-control" %>
</div>

<div class="form-group">
<%= form_with model: @genre, url: admin_genres_path do |f| %>
  <%= f.label :genre_id, 'ジャンル' %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "-- 選択して下さい --" %>
<% end %>
</div>

<div class="form-group">
<label for ="item_name">税抜価格</label>
<%= f.text_field :price, class:"form-control" %>
<span>円</span>
</div>

<label for ="status">販売ステータス</label>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" value="option1">
  <label class="form-check-label" for="inlineRadio1">販売中</label>
</div>
<div class="form-check form-check-inline">
  <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">
  <label class="form-check-label" for="inlineRadio2">販売停止中</label>
</div>


<% end %>

 </div>
 </div>
</div>