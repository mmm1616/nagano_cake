<div class="container">
<div class="col-10 mt-5">
<h2>商品新規登録</h2>
</div>
</div>

<div class="container">
 <div class="row">
 <div class="w-50 mx-auto">

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<div class="form-group">
<label for ="item_image">商品画像</label>
<%= f.file_field :image, class:"form-control-file", accept: "image/*" %>
</div>

<div class="form-group">
<label for ="item_name">商品名</label>
<%= f.text_field :name, class:"form-control" %>
</div>

<div class="form-group">
<label>商品説明</label>
<%= f.text_area :introduction,class:"form-control" %>
</div>

<div class="form-group">
<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "-- 選択して下さい --" %>
</div>

<div class="form-group">
<label for ="item_name">税抜価格</label>
<%= f.text_field :price, class:"form-control" %>
<span>円</span>
</div>

<div class="form-group">
<label for ="is_active">販売ステータス</label>
<%= f.radio_button :is_active, '1' %>
<%= f.label :is_active, '販売中', value: 1%>
<%= f.radio_button :is_active, '0' %>
<%= f.label :is_active, '販売停止中', value: 0 %>
</div>

<div class="form-group">
<%= f.submit '新規登録',class:"btn btn-success" %>
</div>


<% end %>

 </div>
 </div>
</div>