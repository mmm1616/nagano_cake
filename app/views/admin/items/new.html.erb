<div class="container">
<div class="col-4 mt-5 mb-5 secondary text-center">
<h2>商品新規登録</h2>
</div>
</div>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>

<div class="container">
<div class="col-7 mx-auto">
 
<div class="form-group row">
<label for ="item_image" class="col-3 col-form-label">商品画像</label>
<div class="col-9 pt-1">
<%= f.file_field :image, class:"form-control-file", accept: "image/*" %>
</div>
</div>

<div class="form-group row">
<div class="col-3 col-form-label"><%= f.label :name, "商品名" %></div>
<div class="col-9">
<%= f.text_field :name, class:"form-control" %>
</div>
</div>

<div class="form-group row">
<div class="col-3 col-form-label"><%= f.label :introduction, "商品説明" %></div>
<div class="col-9">
<%= f.text_area :introduction,class:"form-control" %>
</div>
</div>

<div class="form-group row">
<div class="col-3 col-form-label"><%= f.label :genre_id, "ジャンル" %></div>
<div class="col-9 pt-1">
<%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "-- 選択して下さい --" %>
</div>
</div>

<div class="form-group row">
<div class="col-3 col-form-label"><%= f.label :price, "税抜価格" %></div>
<div class="col-7">
<%= f.text_field :price, class:"form-control"%>
</div>
<div class="col-2 align-items-center">円</div>
</div>

<div class="form-group row">
<div class="col-md-3 col-form-label"><%= f.label :is_active, "販売ステータス" %></div>
<div class="col-md-9 pt-1">
<%= f.radio_button :is_active, 'true' %>
<%= f.label :is_active, '販売中', value: true %>
<%= f.radio_button :is_active, 'false' %>
<%= f.label :is_active, '販売停止中', value: false %>
</div>
</div>

<div class="form-group">
<%= f.submit '新規登録',class:"btn btn-success" %>
</div>


<% end %>

 </div>
 </div>
</div>