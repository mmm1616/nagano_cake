<div class="container">
<div class="col-2 mt-5 secondary text-center">
<h2>商品一覧</h2>
</div>
</div>

<div class="col-10 text-right">
<%= link_to new_admin_item_path do %>
<h2><i class="fas fa-plus-circle" style="color: black;"></i></h2>
<% end %>
</div>
</div>
</div>

<div class="container">
<table class="table col-10 mx-auto table-borderless">
    <thead class="thead-light">
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>
   
    <tbody>
        <% @items.each do |item| %>
        <tr>
            <td><%= item.id %></td>
            <td><%= link_to "#{item.name}", admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active %>
            <td><span class="text-success">販売中</span></td>
            <% else %>
            <td><span class="text-muted">販売停止中</span></td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
    
</table>
</div>
</div>

<div class="container col-2 mt-5">
<div class="text-center">
<%= paginate @items %>
</div>
</div>