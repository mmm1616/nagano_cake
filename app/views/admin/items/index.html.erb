<div class="container">
<div class="col-10 mt-5">
<h2>商品一覧</h2>
</div>
</div>

<div class="col-md-8 offset-md-1">
<div class="row">
<table class="table">
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
        <tr>
            <td><%= item.id %></td>
            <td><%= link_to "#{item.name}", admin_item_path(item.id) %></td>
            <td><%= item.price %></td>
            <td><%= item.genre %></td>
            <td><%= item.is_active %></td>
        </tr>
    </tbody>
    <% end %>
</table>
</div>
</div>
