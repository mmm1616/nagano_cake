<div class="container">
<div class="row">
<div class="col-6 mt-5">
<h2>商品一覧</h2>
</div>
<div class="col-6 text-right mt-5">
<%= link_to new_admin_item_path do %>
<h2><i class="fas fa-plus-circle" style="color: black;"></i></h2>
<% end %>
</div>
</div>
</div>

<div class="container">
<table class="table col-10 mx-auto">
    <thead>
        <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
        </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
        <tr>
            <td><%= item.id %></td>
            <td><%= link_to "#{item.name}", admin_item_path(item.id) %></td>
            <td><%= item.price.to_s(:delimited) %></td>
            <td><%= item.genre.name %></td>
            <% if item.is_active %>
            <td>販売中</td>
            <% else %>
            <td>販売停止中</td>
            <% end %>
        </tr>
    </tbody>
    <% end %>
</table>
</div>
</div>
