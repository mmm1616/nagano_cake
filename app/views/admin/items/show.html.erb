<div class="container">
<div class="col-10 mt-5">
<h2>商品詳細</h2>
</div>
</div>

<div class="container">
<div class="row mx-auto">
    
<div class="col-3 text-right">
<%= image_tag @item.image, size: "200x200" %>
</div>

<div class="col-9">
<div class="form-group row">
<label for ="item_name" class="col-3">商品名</label>
<div class="col-9">
<%= @item.name %>
</div>
</div>

<div class="form-group row">
<label for ="item_introduction" class="col-3">商品説明</label>
<div class="col-9">
<%= @item.introduction %>
</div>
</div>

<div class="form-group row">
<label for ="item_genre" class="col-3">ジャンル</label>
<div class="col-9">
<%= @item.genre.name %>
</div>
</div>

<div class="form-group row">
<label for ="item_price" class="col-3">税込価格<br>(税抜価格)</label>
<div class="col-9">
<%= @item.price.to_s %>
</div>
</div>

<div class="form-group row">
<label for ="item_status" class="col-3">販売ステータス</label>
<div class="col-9">
<% if @item.is_active %>
<p>販売中</p>
<% else %>
<p>販売停止中</p>
<% end %>
</div>
</div>

<%= link_to "編集する", edit_admin_item_path(@item.id), class:"btn btn-success" %>

</div>
</div>
</div>